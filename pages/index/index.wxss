page {
  display: block;
  background-color: #f0f2f5;
  height: 100%;
}

.content {
  width: 100%;
  height: 105%;
}

.swiper-tab {
  width: 100%;
  background: #fff;
  text-align: center;
  z-index: 301;
  position: fixed;
  left: 0;
  top: 0;
}

.swiper-tab-list {
  font-size: 28rpx;
  display: inline-block;
  width: 50%;
  line-height: 88rpx;
  color: #999;
}

button {
  margin: 0;
  padding: 0;
  outline: none;
  overflow: visible;
}

button::after {
  border: none;
}

.on {
  color: #17a9df;
  font-weight: bold;
  position: relative;
}

.on:before {
  display: block;
  content: '';
  width: 38rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  background: #17a9df;
  margin-left: -19rpx;
}

.swiper-content {
  height: 100%;
}

.swiper-box{
  height: 100%;
  width: 100%;
  display: inline-block;
  margin-top: 88rpx;
  box-sizing: border-box;
}

.item_info {
  overflow: hidden;
}

.waterfall {
  column-count: 2;
  column-gap: 0;
}

/* 单个图片容器的样式 */
.img_item {
  width: 50%;
  display: inline-block;
  vertical-align: top;
  background-color: #ffffff;
  font-size: 24rpx;
}

.code {
  background-color: #f5f5f5;
  color: #c42c55;
  font-size: 9pt;
  text-align: center;
  width: 100%;
  margin: 0;
  padding: 0;
}